extends layout

block content
    h1=title
    form(method='post',action='/post/add',enctype='multipart/form-data')
        .form-group
            label Title
            input.form-control(name='title',type='text')
        .form-group
            label Category
            select.form-control(name='category',type='text')
                option(value='',disabled,selected) Please select a category
                each category, i in categories
                    option(value='#{category.name}') #{category.name}
        .form-group
            label Body
            textarea.form-control(name='body',type='text',rows='5')
        .form-group
            label Main Image
            input.form-control(name='main_image',type='file')
        .form-group
            label Author
            input.form-control(name='author',type='text')
        input.btn.btn-default(type="submit" ,name='submit', value='Post')
        script(src='/ckeditor/ckeditor.js')
        script
            | CKEDITOR.replace('body')